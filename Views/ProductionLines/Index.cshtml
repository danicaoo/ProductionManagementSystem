@model IEnumerable<ProductionManagementSystem.ViewModels.ProductionLineViewModel>

@{
    ViewData["Title"] = "Производственные линии";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Добавить линию</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Статус</th>
            <th>Коэффициент эффективности</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Status</td>
                <td>@item.EfficiencyFactor</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Подробности</a>
                </td>
            </tr>
        }
    </tbody>
</table>