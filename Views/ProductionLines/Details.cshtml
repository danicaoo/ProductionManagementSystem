@model ProductionManagementSystem.ViewModels.ProductionLineViewModel

@{
    ViewData["Title"] = "Подробности о производственной линии";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        
        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@Model.Status</dd>
        
        <dt class="col-sm-2">Коэффициент эффективности</dt>
        <dd class="col-sm-10">@Model.EfficiencyFactor</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
    <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
</div>