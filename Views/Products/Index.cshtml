@model IEnumerable<ProductionManagementSystem.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Список продуктов";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">Создать новый продукт</a>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Название</th>
                <th>Категория</th>
                <th>Минимальный запас</th>
                <th>Время производства</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Category</td>
                    <td>@item.MinimalStock</td>
                    <td>@item.ProductionTimePerUnit мин</td>
                    <td>
    <a asp-action="Materials" asp-route-id="@item.Id" class="btn btn-info btn-sm">Материалы</a>
    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Редактировать</a>
                </tr>
            }
        </tbody>
    </table>
</div>