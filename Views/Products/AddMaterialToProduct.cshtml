@model ProductionManagementSystem.ViewModels.ProductMaterialViewModel
@{
    ViewData["Title"] = "Добавить материал к продукту";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddMaterialToProduct">
                <input type="hidden" name="ProductId" value="@ViewBag.ProductId" />
                
                <div class="form-group mb-3">
                    <label asp-for="MaterialId" class="control-label">Материал</label>
                    <select asp-for="MaterialId" class="form-control" asp-items="ViewBag.Materials">
                        <option value="">-- Выберите материал --</option>
                    </select>
                    <span asp-validation-for="MaterialId" class="text-danger"></span>
                </div>
                
                <div class="form-group mb-3">
                    <label asp-for="QuantityNeeded" class="control-label">Количество</label>
                    <input asp-for="QuantityNeeded" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="QuantityNeeded" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Добавить" class="btn btn-primary" />
                    <a asp-action="Materials" asp-route-id="@ViewBag.ProductId" class="btn btn-secondary">Отмена</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}